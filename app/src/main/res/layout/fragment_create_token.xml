<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_create_token_title"
        style="@style/LargeSubTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center"
        android:letterSpacing=".1"
        android:padding="@dimen/margin_4_unit"
        android:background="@drawable/bg_dewby_gradiant_night_title"
        android:text="Import Token"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_separation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_4_unit"
        android:background="@color/separate"
        app:layout_constraintTop_toBottomOf="@id/tv_create_token_title" />


    <TextView
        android:id="@+id/blockchain_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4_unit"
        android:text="Blockchain:"
        app:layout_constraintBottom_toBottomOf="@id/token_blockchain_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/token_blockchain_container" />

    <androidx.cardview.widget.CardView
        android:id="@+id/token_blockchain_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4_unit"
        android:layout_marginTop="@dimen/margin_2_unit"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="@dimen/margin_2_unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_separation"
        app:layout_constraintWidth_percent=".50">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2_unit">

            <ImageView
                android:id="@+id/img_blockchain_logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:paddingStart="@dimen/margin_2_unit"
                android:paddingEnd="@dimen/margin_2_unit"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_bnb"
                app:layout_constraintBottom_toBottomOf="@id/tv_blockchain_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_blockchain_name" />

            <TextView
                android:id="@+id/tv_blockchain_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="BNB"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_blockchain_select_arrow"
                app:layout_constraintStart_toEndOf="@id/img_blockchain_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_blockchain_select_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_drop_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnSecondary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_token_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_unit"
        android:layout_marginEnd="@dimen/margin_2_unit"
        android:text="Token Address: "
        app:layout_constraintStart_toStartOf="@id/blockchain_label"
        app:layout_constraintTop_toBottomOf="@id/token_blockchain_container" />

    <TextView
        android:id="@+id/et_token_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="@dimen/margin_2_unit"
        android:ellipsize="middle"
        android:maxLines="1"
        android:singleLine="true"
        android:text="0xTypicalHoneyPotShitCoinAddressGoesHereAndIfItsTooLongAddEllipse"
        app:layout_constraintEnd_toStartOf="@id/container_token_paste"
        app:layout_constraintStart_toStartOf="@id/tv_token_address_label"
        app:layout_constraintTop_toBottomOf="@id/tv_token_address_label" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_token_paste"
        android:layout_width="48dp"
        android:layout_height="48dp"

        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="@dimen/margin_4_unit"
        app:layout_constraintBottom_toBottomOf="@+id/et_token_address"
        app:layout_constraintEnd_toEndOf="@id/token_blockchain_container"
        app:layout_constraintTop_toTopOf="@id/tv_token_address_label">

        <ImageView
            android:id="@+id/btn_token_create_paste"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSecondary"
            android:padding="@dimen/margin_2_unit"
            android:src="@drawable/baseline_content_paste_24"
            app:layout_constraintBottom_toBottomOf="@+id/et_token_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_token_address"
            app:tint="?attr/colorOnSecondary" />
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_import_token"
        app:layout_constraintTop_toBottomOf="@id/et_token_address">

        <LinearLayout
            android:id="@+id/container_token_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4_unit"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_token_name_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1_unit"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:cardCornerRadius="@dimen/margin_2_unit"
                app:cardElevation="@dimen/margin_1_unit"
                app:cardMaxElevation="@dimen/margin_2_unit">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4_unit">

                    <TextView
                        android:id="@+id/tv_create_token_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textColor="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/tv_create_token_name_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Typical Non-Utility ShitCoin"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_token_symbol_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1_unit"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:cardCornerRadius="@dimen/margin_2_unit"
                app:cardElevation="@dimen/margin_1_unit"
                app:cardMaxElevation="@dimen/margin_2_unit">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4_unit">

                    <TextView
                        android:id="@+id/tv_create_token_symbol_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symbol: "
                        android:textColor="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/tv_create_token_symbol_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="TNUS"

                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_token_decimal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1_unit"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:cardCornerRadius="@dimen/margin_2_unit"
                app:cardElevation="@dimen/margin_1_unit"
                app:cardMaxElevation="@dimen/margin_2_unit">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4_unit">

                    <TextView
                        android:id="@+id/tv_create_token_decimal_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decimals: "
                        android:textColor="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/tv_create_token_decimal_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="17"

                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_token_buy_tax_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1_unit"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:cardCornerRadius="@dimen/margin_2_unit"
                app:cardElevation="@dimen/margin_1_unit"
                app:cardMaxElevation="@dimen/margin_2_unit">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4_unit">

                    <TextView
                        android:id="@+id/tv_create_token_buy_tax_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Est. Buy Tax: "
                        android:textColor="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/tv_create_token_buy_tax_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="25%"

                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_token_sell_tax_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1_unit"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:cardCornerRadius="@dimen/margin_2_unit"
                app:cardElevation="@dimen/margin_1_unit"
                app:cardMaxElevation="@dimen/margin_2_unit">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4_unit">

                    <LinearLayout
                        android:id="@+id/container_sell_tax_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_create_token_sell_tax_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. Sell Tax: "
                            android:textColor="?attr/colorSecondary" />

                        <TextView
                            android:id="@+id/tv_create_token_sell_tax_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="100%"

                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4_unit"
                        app:cardBackgroundColor="?attr/colorOnSecondary"
                        app:cardCornerRadius="@dimen/margin_1_unit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/container_sell_tax_information">

                        <LinearLayout
                            android:id="@+id/container_sell_red_flag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_1_unit">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_outlined_flag_24" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_outlined_flag_24" />

                            <TextView
                                android:id="@+id/tv_create_token_sell_tax_warning"
                                style="@style/BigText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="HONEYPOT DETECTED!!"
                                android:textColor="@color/pure_red"
                                app:layout_constraintTop_toBottomOf="@id/container_sell_tax_information" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_outlined_flag_24" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_outlined_flag_24" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_import_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Token"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>