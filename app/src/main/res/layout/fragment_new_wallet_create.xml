            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tv_new_wallet_11"
            app:layout_constraintStart_toStartOf="@id/tv_new_wallet_11"
            app:layout_constraintTop_toBottomOf="@id/tv_new_wallet_7" />

        <TextView
            android:id="@+id/tv_new_wallet_9_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="@id/guide_center"
            app:layout_constraintStart_toEndOf="@id/tv_new_wallet_9"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_9" />

        <TextView
            android:id="@+id/tv_new_wallet_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_10"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guide_center"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_9" />

        <TextView
            android:id="@+id/tv_new_wallet_10_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_new_wallet_10"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_9" />

        <TextView
            android:id="@+id/tv_new_wallet_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/num_11"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_new_wallet_1"
            app:layout_constraintTop_toBottomOf="@id/tv_new_wallet_9" />

        <TextView
            android:id="@+id/tv_new_wallet_11_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="@id/guide_center"
            app:layout_constraintStart_toEndOf="@id/tv_new_wallet_11"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_11" />

        <TextView
            android:id="@+id/tv_new_wallet_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_12"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guide_center"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_11" />

        <TextView
            android:id="@+id/tv_new_wallet_12_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_new_wallet_12"
            app:layout_constraintTop_toTopOf="@id/tv_new_wallet_11" />

        <TextView
            android:id="@+id/tv_new_wallet_confirmation_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/new_wallet_confirmation_note"
            app:layout_constraintTop_toBottomOf="@id/tv_new_wallet_11" />

        <TextView
            android:id="@+id/tv_new_wallet_confirmation_note_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/new_wallet_confirmation_note_2"
            app:layout_constraintTop_toBottomOf="@id/tv_new_wallet_confirmation_note" />

        <CheckBox
            android:id="@+id/chk_new_wallet_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/new_wallet_confirmation"
            app:layout_constraintTop_toBottomOf="@id/tv_new_wallet_confirmation_note_2" />

        <Button
            android:id="@+id/btn_save_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_wallet_save"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/chk_new_wallet_confirm" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>