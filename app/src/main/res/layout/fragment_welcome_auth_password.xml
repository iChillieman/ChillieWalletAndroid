<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/welcome_password_error_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none"
        android:layout_margin="8dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_error"
        app:layout_constraintTop_toBottomOf="@id/welcome_create_password_title" />



    <TextView
        android:id="@+id/welcome_create_password_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/password_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_welcome_create_password_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:gravity="top"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:nextFocusDown="@id/et_welcome_create_password_second"
        android:hint="Enter a strong password..."
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/et_welcome_create_password_second" />

    <EditText
        android:id="@+id/et_welcome_create_password_second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:inputType="textPassword"
        android:gravity="top"
        android:hint="Confirm password..."
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_create_password"/>

    <Button
        android:id="@+id/btn_create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/password_create"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>